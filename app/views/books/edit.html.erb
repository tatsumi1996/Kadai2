<% if @book.errors.any? %>
  <div class="error_word">
    <p>can't be blank error</p>
  </div>
<% end %>
<h1>Editing Book</h1>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Update Book' %></br>
<% end %>

<table>
  <tr>
    <th><%= link_to "Show", book_path(@book.id) %></th>
    <th><p>|</p></th>
    <th><%= link_to "back", "/books" %></th>
  </tr>
</table>